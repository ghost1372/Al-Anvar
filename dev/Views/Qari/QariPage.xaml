<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AlAnvar.Views.QariPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:labs="using:CommunityToolkit.Labs.WinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <labs:Segmented x:Name="segmented"
                        Margin="10"
                        HorizontalAlignment="Center"
                        SelectionChanged="{x:Bind OnSegmentedChanged}">
            <labs:SegmentedItem Content="دانلود قاری" />
            <labs:SegmentedItem Content="قاری های موجود" />
        </labs:Segmented>
        <Frame x:Name="qariFrame"
               Grid.Row="1" />
    </Grid>
</Page>
