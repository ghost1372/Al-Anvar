<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AlAnvar.Views.ThemeSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AlAnvar"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AlAnvar.Views"
      dev:BreadcrumbNavigator.IsHeaderVisible="True"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    Spacing="5">
            <dev:SettingsCard Description="پوسته و متریال دلخواه خود را انتخاب کنید"
                              Header="ظاهر برنامه"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/theme.png}">
                <ComboBox dev:ThemeServiceAttach.ThemeService="{x:Bind local:App.Current.ThemeService}">
                    <ComboBoxItem Content="روشن"
                                  Tag="Light" />
                    <ComboBoxItem Content="تاریک"
                                  Tag="Dark" />
                    <ComboBoxItem Content="پیشفرض سیستم"
                                  Tag="Default" />
                </ComboBox>
            </dev:SettingsCard>
            <dev:SettingsCard Description="تغییر متریال برنامه به میکا یا آکریلیک"
                              Header="متریال ها"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/backdrop.png}">
                <ComboBox dev:ThemeServiceAttach.ThemeService="{x:Bind local:App.Current.ThemeService}">
                    <ComboBoxItem Content="میکا"
                                  Tag="Mica" />
                    <ComboBoxItem Content="میکا آلت"
                                  Tag="MicaAlt" />
                    <ComboBoxItem Content="آکریلیک"
                                  Tag="DesktopAcrylic" />
                </ComboBox>
            </dev:SettingsCard>
            <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/external.png}"
                              Description="رنگ تمام قسمت های برنامه را تغییر دهید"
                              Header="تنظیمات رنگ ویندوز"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/color.png}"
                              IsClickEnabled="True"
                              LaunchUri="ms-settings:colors" />
        </StackPanel>
    </ScrollView>
</Page>
