<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AlAnvar.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AlAnvar"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AlAnvar.Views"
      dev:BreadcrumbNavigator.IsHeaderVisible="True"
      mc:Ignorable="d">
    <ScrollView Margin="{ThemeResource ContentPageMargin}"
                Padding="{ThemeResource ContentPagePadding}"
                HorizontalAlignment="Stretch"
                VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    dev:PanelAttach.ChildrenTransitions="Default"
                    dev:SettingsNavigationAttach.JsonNavigationService="{x:Bind local:App.Current.NavService}"
                    Spacing="5">
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:AppUpdateSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="بررسی و دانلود نسخه های جدید الانوار"
                              Header="بروزرسانی برنامه"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/update.png}"
                              IsClickEnabled="True"
                              Tag="AppUpdateSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:GeneralSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="تنظیمات عمومی الانوار"
                              Header="عمومی"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/settings.png}"
                              IsClickEnabled="True"
                              Tag="GeneralSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:ThemeSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="پوسته و متریال دلخواه خود را انتخاب کنید"
                              Header="ظاهر برنامه"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/theme.png}"
                              IsClickEnabled="True"
                              Tag="ThemeSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:FontSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="قلم و رنگ متون آیات، شماره آیات و ترجمه ها را به دلخواه خود انتخاب کنید"
                              Header="قلم و رنگ متن"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/font.png}"
                              IsClickEnabled="True"
                              Tag="FontSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:TranslationSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="از بین ترجمه های موجود یکی را برای نمایش انتخاب کنید"
                              Header="ترجمه آیات"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/subtitle.png}"
                              IsClickEnabled="True"
                              Tag="TranslationSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:QariSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="از بین قاری های موجود یکی را انتخاب کنید و یا قاری های بیشتری را دانلود کنید"
                              Header="قاری"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/sound.png}"
                              IsClickEnabled="True"
                              Tag="QariSettingPage" />
            <dev:SettingsCard dev:NavigationHelperEx.NavigateToSetting="views:AboutSettingPage"
                              ActionIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                        Glyph=&#xE76B;}"
                              Description="درباره برنامه الانوار و توسعه دهنده"
                              Header="درباره ما"
                              HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/info.png}"
                              IsClickEnabled="True"
                              Tag="AboutSettingPage" />
        </StackPanel>
    </ScrollView>
</Page>
